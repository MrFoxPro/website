{
  "formatter": {
    "enabled": true,
    "indentSize": 3,
    "indentStyle": "space",
    "lineWidth": 110
  },
  "javascript": {
    "formatter": {
      "trailingComma": "all",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "suspicious": {
        "recommended": false,
        "noSparseArray": "error"
      },
      "style": {
        "recommended": false,
        "useShorthandArrayType": "warn",
        "useWhile": "warn",
        "useSingleCaseStatement": "error",
        "noShoutyConstants": "warn",
        "noImplicitBoolean": "warn"
      },
      "nursery": {
        "recommended": false,
        "useEnumInitializers": "error",
        "noConstEnum": "error"
      },
      "performance": {
        "noDelete": "error"
      },
      "complexity": {
        "noUselessFragments": "warn",
        "noExtraBooleanCast": "error",
        "useSimplifiedLogicExpression": "warn",
        "useFlatMap": "warn",
        "useOptionalChain": "warn"
      },
      "a11y": {
        "recommended": false
      }
    }
  }
}